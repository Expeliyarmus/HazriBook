{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Dev Server",
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^([^\\s].*)"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Compiled successfully!"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start Debug Session",
      "type": "shell",
      "command": "echo",
      "args": ["Debug session ready. Press F5 in VS Code to start debugging!"],
      "dependsOn": ["Start Dev Server"],
      "problemMatcher": []
    }
  ]
}